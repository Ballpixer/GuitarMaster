<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:visibility="visible" tools:visibility="visible"
        android:background="#F6F6F6">
    <TextView
            android:layout_width="334dp"
            android:layout_height="99dp"
            android:text="Guitar Master"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.102"
            android:id="@+id/main_menu_text" android:gravity="center" android:textSize="48sp"
            android:textColor="@android:color/holo_red_dark" android:textColorHighlight="@color/black"/>
    <Button
            android:text="Далее"
            android:layout_width="168dp"
            android:background="@drawable/background"
            android:layout_height="56dp" android:id="@+id/main_menu_button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.374"
            android:textColor="@android:color/holo_red_dark"/>
    <ImageView
            android:layout_width="363dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_height="405dp" app:srcCompat="@drawable/guitars"
            android:rotation="-90" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"
            android:id="@+id/main_menu_ImageView"/>


</androidx.constraintlayout.widget.ConstraintLayout>